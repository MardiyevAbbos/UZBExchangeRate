<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_padding_24"
    android:background="@drawable/item_background_white_16"
    android:orientation="vertical"
    tools:context=".dialogs.NoConnectionDialog">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_padding_24"
        android:gravity="center"
        android:text="@string/no_internet_connection"
        android:textAppearance="@style/M16"
        android:textColor="@color/d_black_100" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_padding_24"
        app:srcCompat="@drawable/ic_no_connection_icon" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/checkConnection"
        style="@style/Button_Green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_padding_16"
        android:layout_marginVertical="@dimen/margin_padding_24"
        android:text="@string/check_connection"
        android:textAppearance="@style/M14"
        android:textColor="@color/s_white_100" />

</androidx.appcompat.widget.LinearLayoutCompat>