<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/ll_main_background"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_linear_rounded_gray"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/combinedBalanceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_16"
        android:layout_marginBottom="@dimen/margin_padding_4"
        android:elevation="12dp"
        android:hint="balnce"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/ll_main_background"
        android:layout_marginTop="@dimen/margin_padding_16"
        app:layout_constraintBottom_toTopOf="@id/cardBalanceTv"
        app:layout_constraintStart_toStartOf="@id/ll_main_background" />

    <TextView
        android:id="@+id/cardBalanceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/combinedBalanceTv"
        app:layout_constraintTop_toBottomOf="@id/combinedBalanceTv"
        tools:text="0,0" />

    <LinearLayout
        android:id="@+id/ll_show_hide_bg"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="@dimen/margin_padding_16"
        android:background="@drawable/bg_linear_rounded_gray"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/ll_main_background"
        app:layout_constraintEnd_toEndOf="@id/ll_main_background"
        app:layout_constraintTop_toTopOf="@id/ll_main_background" />

    <ImageView
        android:id="@+id/showAndHide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="@id/ll_show_hide_bg"
        app:layout_constraintEnd_toEndOf="@id/ll_show_hide_bg"
        app:layout_constraintStart_toStartOf="@id/ll_show_hide_bg"
        app:layout_constraintTop_toTopOf="@id/ll_show_hide_bg"
        app:srcCompat="@drawable/ic_search"
        app:tint="@color/black"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/combinedCashBackTv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_8"
        android:layout_marginEnd="@dimen/margin_padding_8"
        android:layout_marginBottom="@dimen/margin_padding_4"
        android:elevation="12dp"
        android:text="CashBack"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/ll_main_background"
        android:layout_marginTop="@dimen/margin_padding_16"
        app:layout_constraintBottom_toTopOf="@id/cashBackBalanceTv2"
        app:layout_constraintEnd_toStartOf="@id/ll_show_hide_bg" />

    <TextView
        android:id="@+id/cashBackBalanceTv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_8"
        android:layout_marginEnd="@dimen/margin_padding_8"
        android:elevation="12dp"
        android:textSize="@dimen/margin_padding_16"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/ll_show_hide_bg"
        app:layout_constraintTop_toBottomOf="@id/combinedCashBackTv2"
        tools:text="0,0" />

</androidx.constraintlayout.widget.ConstraintLayout>