<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_padding_24"
    android:background="@drawable/item_background_white_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_16"
            android:gravity="center"
            android:padding="@dimen/margin_padding_16"
            android:text="@string/str_do_you_want_to_..."
            android:textAppearance="@style/M16"
            android:textColor="@color/d_gray_100" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_padding_16"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/margin_padding_6"
                android:layout_height="wrap_content"
                android:text="@string/str_no" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_yes"
                style="@style/Button_Green"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/margin_padding_6"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/str_yes" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>